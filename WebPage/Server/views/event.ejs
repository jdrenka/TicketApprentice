  <!-- Header -->
  <%- include('partials/header.ejs'); %>
  
<!-- Event Card -->
<div class="container mt-5 fade-in1">
  <div class="card event-page">
    <div class="row no-gutters">
      <!-- Left side for details -->
      <div class="col-md-6 d-flex align-items-center justify-content-center">
        <!-- Adjusting the size of the square-image-container for a fixed aspect ratio -->
        <div class="square-image-container">
          <img src= " <%= event.coverPhoto %> " class="card-img-top img-fluid rounded" alt="Event Image">
        </div>
      </div>
      <!-- Right side for details -->
      <div class="col-md-6">
        <div class="card-body">
          <!-- Adding a class to the event title for styling -->
          <h5 class="card-title event-title"> <%= event.eventTitle %> </h5>
          <p class="card-text"><strong><i class="far fa-calendar"></i><%= event.eventDate.toLocaleDateString('en-US', { timeZone: 'UTC' }) %>, <%= event.eventDate.toLocaleTimeString('en-US', { timeZone: 'UTC', hour: 'numeric', minute: 'numeric' }) %></strong></p>
          <p class="card-text"><strong><i class="fas fa-map-marker-alt"></i><%= event.address %></strong></p>

          <p class="card-text"><%= event.description %></p>
          <p class="card-text"><strong>Price:</strong> <%= event.ticketPrice %></p>
          <a href="#" class="btn btn-color btn-lg btn-block">Get Tickets</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Footer -->
<script src="includefooter.js"></script>








